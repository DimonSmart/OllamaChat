@page "/"
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Ollama Chat</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Ollama Chat</h4>
                </div>
                <div class="card-body text-center">
                    <h1 class="mb-4">Welcome to Ollama Chat</h1>
                    <p class="lead">
                        Chat with your local AI models using Ollama
                    </p>
                    <div class="mt-4">
                        <button class="btn btn-primary btn-lg" @onclick="NavigateToChat">
                            <i class="bi bi-chat-dots-fill me-2"></i>Start Chatting
                        </button>
                        <button class="btn btn-outline-secondary btn-lg ms-2" @onclick="NavigateToSystemPrompts">
                            <i class="bi bi-gear-fill me-2"></i>Manage System Prompts
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "Home page initialized");
    }

    private void NavigateToChat()
    {
        NavigationManager.NavigateTo("/chat");
    }

    private void NavigateToSystemPrompts()
    {
        NavigationManager.NavigateTo("/system-prompts");
    }
}
