@using Microsoft.AspNetCore.Components
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Save Chat</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="title" Label="Chat Title" Required="true" Immediate="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Disabled="@string.IsNullOrWhiteSpace(title)" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance? Dialog { get; set; }
    private string title = string.Empty;

    private void Cancel() => (Dialog ?? throw new InvalidOperationException("Dialog reference is missing.")).Cancel();
    private void Save() => (Dialog ?? throw new InvalidOperationException("Dialog reference is missing.")).Close(DialogResult.Ok(title));
}
