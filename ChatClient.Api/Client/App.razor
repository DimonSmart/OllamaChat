@using Microsoft.AspNetCore.Components.Routing
@using ChatClient.Api.Client.Layout
@using ChatClient.Api.Client.Components
@using MudBlazor

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <MudContainer Class="mt-4">
                <MudAlert Severity="Severity.Error">
                    <h4>Page not found</h4>
                    <p role="alert">Sorry, there's nothing at this address. The requested page was not found.</p>
                    <MudButton Href="/" Variant="Variant.Filled" Color="Color.Primary">Go to Chat</MudButton>
                </MudAlert>
                <MudStack Class="mt-3">
                    <h5>Available Pages</h5>
                    <MudList T="string">
                        <MudListItem T="string" Href="/">Home</MudListItem>
                        <MudListItem T="string" Href="/chat">Chat</MudListItem>
                        <MudListItem T="string" Href="/agent-descriptions">Agent Descriptions</MudListItem>
                        <MudListItem T="string" Href="/models">Models</MudListItem>
                        <MudListItem T="string" Href="/llm-servers">LLM Servers</MudListItem>
                        <MudListItem T="string" Href="/app-settings">Application Settings</MudListItem>
                    </MudList>
                </MudStack>
            </MudContainer>
        </LayoutView>
    </NotFound>
</Router>

